#include<iostream>
using namespace std;

const float PI = 3.14159;

float calculateArea(float radius) {
    return PI * radius * radius;
}

int main() {
    float radius;
    cout << "Enter the radius of the circle: ";
    cin >> radius;

    float area = calculateArea(radius);
    cout << "Area of the circle: " << area << endl;

    return 0;
}
