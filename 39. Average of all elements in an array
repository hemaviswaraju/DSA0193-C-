#include<iostream>
using namespace std;
int main() {
    int n;
    float sum = 0.0;
    cout << "Enter the number of elements in the array: ";
    cin >> n;
    float arr[n];
    cout << "Enter " << n << " Array Elements: ";
    for(int i = 0; i < n; i++) {
        cin >> arr[i];
    }
    for(int i = 0; i < n; i++) {
        sum += arr[i];
    }
    float average = sum / n;
    cout << "Average of the array elements: " << average << endl;
    return 0;
}
